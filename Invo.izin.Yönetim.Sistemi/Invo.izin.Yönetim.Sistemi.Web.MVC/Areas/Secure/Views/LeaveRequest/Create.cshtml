@{
    Layout = "_Layout";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">

                    <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i> </a></li>
                    <li class="breadcrumb-item"><a href="#"><i class="fas fa-tasks"></i> </a></li>
            </div><!-- /.col -->
        </div>
        <!-- /.c
        </div><!-- /.row -->
    </div>



    <div class="card-header" style="background-color:#6c757d">
        <h1 class="m-0">İzin Ekleme Formu</h1>

    </div>
    <div class="card-body" ng-app="LeaveRequestApp" ng-controller="LeaveRequestController">



        <form>
            <div class="form-group row">
                <label for="startDate" class="col-4 col-form-label">Başlangıç Tarihi</label>
                <div class="col-8">
                    <input date='dd-MM-yyyy'  id="startDate" name="startDate" placeholder="Başlangıç Tarihi" type="date" class="form-control" required="required" ng-model="leaveRequest.startedDate">
                </div>
            </div>
            <div class="form-group row">
                <label for="finishDate" class="col-4 col-form-label">Bitiş Tarihi</label>
                <div class="col-8">
                    <input date='dd-MM-yyyy' id="finishDate" name="finishDate" type="date" class="form-control" required="required" ng-model="leaveRequest.finishedDate">
                </div>
            </div>
            <div class="form-group row">
                <label for="leaveType" class="col-4 col-form-label">İzin Tipi</label>
                <div class="col-8">
               

                    <select id="leaveType" name="leaveType" class="custom-select" required="required" ng-model="leaveRequest.leaveTypeId">

                        <option ng-repeat="x in leaveTypes" value="{{x.id}}">{{x.value}}</option>

                    </select>

                </div>
            </div>
            <div class="form-group row">
                <div class="offset-4 col-8">
                    
                    <a ng-click="SaveLeaveRequest()" class="btn btn-primary">{{ btntext }}</a>
                </div>
            </div>
        </form>




    </div>

</div>



 