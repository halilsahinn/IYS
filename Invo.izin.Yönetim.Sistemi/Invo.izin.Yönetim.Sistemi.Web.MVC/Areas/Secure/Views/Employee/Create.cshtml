@{
    Layout = "_Layout";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">

                    <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i> </a></li>
                    <li class="breadcrumb-item"><a href="#"><i class="fas fa-tasks"></i> </a></li>
            </div><!-- /.col -->
        </div>
        <!-- /.c
        </div><!-- /.row -->
    </div>



    <div class="card-header" style="background-color:#6c757d">
        <h1 class="m-0">Çalışan Ekleme Formu</h1>

    </div>
    <div class="card-body" ng-app="EmployeeApp" ng-controller="EmployeeController">

      

        <form action="">
            <div class="form-group row">
                <label for="EmployeeName" class="col-4 col-form-label">Çalışn Adı</label>
                <div class="col-8">
                    <div class="input-group">
                        <input id="EmployeeName" name="EmployeeName" placeholder="Çalışn Adı" type="text" class="form-control" ng-model="employee.employeeName">
                        <div class="input-group-append">
                   
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label for="EmployeeSurName" class="col-4 col-form-label">Çalışan Soyadı</label>
                <div class="col-8">
                    <input id="EmployeeSurName" name="EmployeeSurName" placeholder="Çalışan Soyadı" type="text" class="form-control" ng-model="employee.employeeSurName">
                </div>
            </div>
            <div class="form-group row">
                <label for="departmentName" class="col-4 col-form-label">Departman</label>
                <div class="col-8">
                    <select id="departmentName" name="departmentName" class="custom-select" required="required" ng-model="employee.departmentId">

                        <option ng-repeat="x in departments" value="{{x.id}}">{{x.value}}</option>

                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-4">Yönetici</label>
                <div class="col-8">
                    <div class="custom-control custom-checkbox custom-control-inline">
                        <input name="isHead" id="isHead_0" type="checkbox" class="custom-control-input" value="true" ng-model="employee.isHead">
                        <label for="isHead_0" class="custom-control-label">Evet</label>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label for="title" class="col-4 col-form-label">Ünvan</label>
                <div class="col-8">
                    <select id="title" name="title" class="custom-select" required="required" ng-model="employee.titleId">

                        <option ng-repeat="x in employeeTitle" value="{{x.id}}">{{x.value}}</option>

                    </select>

                </div>
            </div>
            <div class="form-group row">
                <label for="BranchOfficeName" class="col-4 col-form-label">Şube</label>
                <div class="col-8">
                    <select id="BranchOfficeName" name="BranchOfficeName" class="custom-select" ng-model="employee.branchOfficeId">

                        <option ng-repeat="x in branchOffice" value="{{x.id}}">{{x.value}}</option>

                    </select>
                </div>
            </div>

            <div class="form-group row">
                <label for="User" class="col-4 col-form-label">Kullanıcı</label>
                <div class="col-8">
                    <select id="User" name="users" class="custom-select" ng-model="employee.userId">

                        <option ng-repeat="x in users" value="{{x.userId}}">{{x.name}}</option>

                    </select>
                </div>
            </div>



            <div class="form-group row">
                <div class="offset-4 col-8">
                    <a ng-click="SaveEmployee()" class="btn btn-primary">{{ btntext }}</a>

                
                </div>
            </div>
        </form>




    </div>

</div>




