@{
    Layout = "_Layout";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Çalışan Yönetimi</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">

                    <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i> </a></li>
                    <li class="breadcrumb-item"><a href="#"><i class="fas fa-tasks"></i> </a></li>
            </div><!-- /.col -->
    </div><!-- /.c
        </div><!-- /.row -->
</div>

  
 
    <div class="card-header" style="background-color:#6c757d">

        <a class="btn btn-primary float-left" href="/Secure/Employee/Create"><i class="fas fa-plus"></i> Çalışan Ekle</a>

    </div>
    <div class="card-body" ng-app="EmployeeApp" ng-controller="EmployeeController" ng-init="GetEmployeeList()">
 
        <table class="table table-bordered table-striped" style="width:100%" >
            <thead>
            <tr>
          
                <th>Ad</th>

                <th>Soyad</th>

                <th>Departman</th>

                <th>Yönetici</th>

                <th>Pozisyon</th>

                <th>Şube</th>

                <th>Eklenme Tarihi</th>
          

            </tr>
            </thead>
            <tbody>
                <tr ng-repeat="e in employees">

                  

                    <td>{{ e.employeeName }}</td>

                    <td>{{ e.employeeSurName }}</td>

                    <td>{{ e.departmentName }}</td>

                    <td>{{ e.isHead }}</td>

                    <td>{{ e.title }}</td>

                    <td>{{ e.branchOfficeName }}</td>

                    <td>{{ e.createdDate | date:'d-M-yyyy, h:mm'}}</td>

              

            </tr>
            </tbody>
        </table>
        
        
    

    </div>

</div>




